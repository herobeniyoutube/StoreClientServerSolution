<Window x:Class="StoreClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoreClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="500">
    <Grid>
        
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="currentUser" Text="Войдите в систему"/>
            <DockPanel VerticalAlignment="Top" HorizontalAlignment="Right" >
                <Button x:Name="logoutButton" Content="Регистрация" Click="RegisterButtonClick" Width="100" Height="20"/>
                <Button Click="LoginButtonClick" Width="100" Height="20" Content="Вход"/>
            </DockPanel>
        </StackPanel>

    </Grid>

</Window>
