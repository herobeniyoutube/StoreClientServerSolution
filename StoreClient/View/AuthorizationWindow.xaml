<Window x:Class="StoreClient.View.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoreClient.View"
        mc:Ignorable="d"
        Title="Вход" Height="200" Width="300"
        VerticalAlignment="Center" 
        HorizontalAlignment="Center">
    <Grid>
        <StackPanel Margin="5">
            <TextBlock Text="Логин:"/>
            <TextBox x:Name="LoginBox" Background="LightGray" Width="140" HorizontalAlignment="Left" Text="user"/>
            <TextBlock Text="Пароль:"/>
            <PasswordBox PasswordChar="*" x:Name="PasswordBox" Background="LightGray" Width="140" HorizontalAlignment="Left"/>
            <Button  Click="AuthorizeButtonAsyncClick" Content="Войти" Width="100" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,10"/>

        </StackPanel>
        
    </Grid>
</Window>
