<Window x:Class="StoreClient.View.ProductConfiguratorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoreClient.View"
        mc:Ignorable="d"
        Title="ProductConfigurator" Height="200" Width="300"
        VerticalAlignment="Center" 
        HorizontalAlignment="Center">
    <Grid>
        <StackPanel Margin="5">
            <TextBlock Text="Название продукта:"/>
            <TextBox x:Name="NameBox" Background="LightGray" Width="140" HorizontalAlignment="Left"/>
            <TextBlock Text="Цена за штуку:"/>
            <TextBox x:Name="PriceBox" Background="LightGray" Width="140" HorizontalAlignment="Left"/>
            
            <Button  Click="AddProductButtonClickAsync" Content="Добавить" Width="120" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>
